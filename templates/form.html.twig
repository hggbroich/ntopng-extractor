{% extends "@Common/form.html.twig" %}

{%- block student_sibling_widget -%}
    <div class="mb-2 d-flex">
        <div class="flex-fill">
            {{ form_widget(form) }}
        </div>

        <button type="button" class="btn btn-danger btn-sm btn-delete ms-2" data-selector=".mb-2">
            <i class="fa fa-trash"></i>
        </button>
    </div>
{%- endblock -%}

{% block distance_widget %}
    <div class="input-group">
        {{ form_widget(form) }}

        <span class="input-group-text">
            km
        </span>
    </div>
{% endblock %}

